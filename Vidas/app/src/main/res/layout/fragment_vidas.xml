<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_vidas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.michus.vidas.VidasFragment"
    tools:showIn="@layout/activity_vidas">

    <Button
        android:text="P+"
        android:layout_width="88dp"
        android:layout_height="53dp"
        android:id="@+id/BtVeneno1Mas"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints"
        android:textColor="#13A52F"  />

    <android.support.constraint.Guideline
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="284dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="284dp"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:id="@+id/BtRobaA2"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:text="↑" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/BtRobaA1"
        app:layout_constraintTop_toBottomOf="@+id/BtRobaA2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:text="↓" />

    <Button
        android:text="P+"
        android:layout_height="wrap_content"
        android:id="@+id/BtVeneno2Mas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="88dp"
        android:textColor="#13A52F"/>

    <Button
        android:text="♥+"
        android:layout_height="0dp"
        android:id="@+id/BtVida2Mas"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/BtVeneno2Mas"
        app:layout_constraintTop_toBottomOf="@+id/BtRobaA1"
        android:layout_width="88dp"
        app:layout_constraintVertical_bias="0.0"
        android:textColor="#FF0000" />

    <Button
        android:text="♥-"
        android:layout_height="0dp"
        android:id="@+id/BtVida2Menos"
        android:layout_width="88dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/BtVida2Mas"
        app:layout_constraintTop_toTopOf="@+id/BtVida2Mas"
        android:textColor="#FF0000"/>

    <Button
        android:text="♥+"
        android:layout_width="88dp"
        android:layout_height="0dp"
        android:id="@+id/BtVida1Mas"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtVeneno1Mas"
        app:layout_constraintBottom_toTopOf="@+id/BtRobaA2"
        app:layout_constraintVertical_bias="1.0"
        android:textColor="@color/colorAccent" />

    <Button
        android:text="♥-"
        android:layout_height="0dp"
        android:id="@+id/BtVida1Menos"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/BtRobaA2"
        android:layout_width="88dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/BtVeneno1Mas"
        android:textColor="#FF0000"/>

    <TextView
        android:text="TvPantalla1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/TvPantalla1"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/BtRobaA2"
        app:layout_constraintRight_toLeftOf="@+id/BtVida1Menos"
        app:layout_constraintLeft_toRightOf="@+id/BtVida1Mas"
        android:textSize="36sp" />

    <TextView
        android:text="TvPantalla2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/TvPantalla2"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@+id/BtVida2Menos"
        app:layout_constraintLeft_toRightOf="@+id/BtVida2Mas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtRobaA1"

        android:textSize="36sp" />

    <Button
        android:text="P-"
        android:id="@+id/BtVeneno1Menos"
        android:layout_width="88dp"
        android:layout_height="53dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/BtVida1Menos"
        android:textColor="#13A52F"/>

    <Button
        android:text="P-"
        android:id="@+id/BtVeneno2Menos"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="88dp"
        android:layout_height="53dp"
        android:textColor="#13A52F"/>
</android.support.constraint.ConstraintLayout>
